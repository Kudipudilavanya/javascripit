This program creates a simple to-do list with the ability to add tasks, mark tasks as completed, and remove tasks.
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        #todoList {
            max-width: 400px;
            margin: auto;
        }
        .task {
            margin-bottom: 10px;
        }
        .completed {
            text-decoration: line-through;
            color: #999;
        }
    </style>
</head>
<body>

<div id="todoList">
    <h1>Todo List</h1>
    <input type="text" id="newTask" placeholder="Add a new task">
    <button onclick="addTask()">Add Task</button>

    <ul id="tasks"></ul>
</div>

<script>
    function addTask() {
        var newTaskInput = document.getElementById("newTask");
        var taskText = newTaskInput.value;

        if (taskText.trim() !== "") {
            // Create a new task element
            var taskElement = document.createElement("li");
            taskElement.className = "task";
            taskElement.innerHTML = '<input type="checkbox" onchange="completeTask(this)"> ' + taskText +
                                    ' <button onclick="removeTask(this)">Remove</button>';

            // Append the new task to the tasks list
            document.getElementById("tasks").appendChild(taskElement);

            // Clear the input field
            newTaskInput.value = "";
        }
    }

    function completeTask(checkbox) {
        var taskText = checkbox.parentNode.textContent;
        checkbox.parentNode.classList.toggle("completed");
        alert("Task completed: " + taskText);
    }

    function removeTask(button) {
        var taskText = button.parentNode.textContent;
        button.parentNode.remove();
        alert("Task removed: " + taskText);
    }
</script>

</body>
</html>
